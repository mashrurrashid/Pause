<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNote">
    <TextView
        android:id="@+id/create_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="@string/Note_text"
        android:textStyle="bold"
        android:textSize="35dp"
        />

    <EditText
        android:id="@+id/createnote_title"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_note_text"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"
        android:hint="Title"
        />

    <EditText
        android:id="@+id/createnote_description"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:textAlignment="center"
        android:layout_below="@id/createnote_title"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"
        android:hint="Description"
        />

    <Button
        android:id="@+id/createnote_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/Note_savebtn"
        />



</RelativeLayout>